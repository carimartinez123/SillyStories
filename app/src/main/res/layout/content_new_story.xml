<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="carimartinez123.sillystories.NewStoryActivity"
    tools:showIn="@layout/activity_new_story">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Select a story:"
            android:id="@+id/newStorySelectText"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story1"
            android:id="@+id/story1Button"
            android:textSize="@dimen/text"
            android:onClick="goToSelections"
            style="@style/greenButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story2"
            android:id="@+id/story2Button"
            android:textSize="@dimen/text"
            android:onClick="goToSelections"
            style="@style/redButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story3"
            android:id="@+id/story3Button"
            android:textSize="@dimen/text"
            android:onClick="unimplemented"
            style="@style/purpleButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story4"
            android:id="@+id/story4Button"
            android:textSize="@dimen/text"
            android:onClick="unimplemented"
            style="@style/blueButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story5"
            android:id="@+id/story5Button"
            android:textSize="@dimen/text"
            android:onClick="unimplemented"
            style="@style/orangeButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story6"
            android:id="@+id/story6Button"
            android:textSize="@dimen/text"
            android:onClick="unimplemented"
            style="@style/pinkButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story7"
            android:id="@+id/story7Button"
            android:textSize="@dimen/text"
            android:onClick="unimplemented"
            style="@style/blueButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story8"
            android:id="@+id/story8Button"
            android:textSize="@dimen/text"
            android:onClick="unimplemented"
            style="@style/greenButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story9"
            android:id="@+id/story9Button"
            android:textSize="@dimen/text"
            android:onClick="unimplemented"
            style="@style/orangeButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />

        <Button
            android:layout_weight="1"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:text="@string/story10"
            android:id="@+id/story10Button"
            android:textSize="@dimen/text"
            android:onClick="unimplemented"
            style="@style/purpleButtonStyle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp" />


    </LinearLayout>
</RelativeLayout>
