<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="carimartinez123.test.PlaceSelectionActivity"
    tools:showIn="@layout/activity_place_selection"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Pick a place:"
                android:id="@+id/placeNumTextView"
                android:editable="false"
                android:textColor="@color/place"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="10dp">



            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/place0Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/orangeButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />



            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/place1Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/redButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:id="@+id/place2Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/greenButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="10dp">



            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/place3Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/purpleButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/place4Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/pinkButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:id="@+id/place5Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/blueButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="10dp">


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/place6Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/greenButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="7dp"
                android:id="@+id/place7Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/orangeButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:id="@+id/place8Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/redButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="10dp">


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/place9Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/pinkButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/place10Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/blueButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:id="@+id/place11Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getPlaces"
                style="@style/purpleButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dip"
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:id="@+id/donePlacesButton"
                android:layout_gravity="center_vertical"
                android:onClick="placesDone"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
