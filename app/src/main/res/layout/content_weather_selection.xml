<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="carimartinez123.sillystories.WeatherSelectionActivity"
    tools:showIn="@layout/activity_weather_selection">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Pick a weather:"
                android:id="@+id/weatherNumTextView"
                android:editable="false"
                android:textColor="#000000"
                android:textSize="@dimen/text_large"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="10dp">



            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/weather0Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/orangeButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />



            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/weather1Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/redButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:id="@+id/weather2Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/greenButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="10dp">



            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/weather3Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/purpleButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/weather4Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/pinkButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:id="@+id/weather5Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/blueButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="10dp">


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/weather6Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/greenButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="7dp"
                android:id="@+id/weather7Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/orangeButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:id="@+id/weather8Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/redButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_margin="10dp">


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/weather9Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/pinkButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:id="@+id/weather10Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/blueButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />


            <Button
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:id="@+id/weather11Button"
                android:textSize="@dimen/text_medium"
                android:onClick="getWeathers"
                style="@style/purpleButtonStyle"
                android:layout_gravity="center"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dip"
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:id="@+id/doneWeathersButton"
                android:layout_gravity="center_vertical"
                android:onClick="weathersDone"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

